# ===========================================
# FiftyFive Labs - Environment Configuration
# ===========================================
# Copy to .env and set values. Never commit .env.

# Admin (required for /admin). Set securely on Render.
ADMIN_TOKEN=your-secure-admin-token-here

# Image API (Together AI etc.)
IMAGE_API_URL=https://api.together.xyz/v1/images/generations
IMAGE_API_KEY=your-api-key

# Security
DEBUG=
ALLOWED_ORIGINS=*

# Rate limiting
DEFAULT_HOURLY_LIMIT=2000
DEFAULT_CONCURRENT_LIMIT=3
MAX_CONCURRENT_PER_KEY=10

# Timing
REQUEST_TIMEOUT=120
IMAGE_TTL_SECONDS=86400

# Database (Render disk: /app/data)
DATA_DIR=/app/data
DB_PATH=/app/data/fiftyfive.db
